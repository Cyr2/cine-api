{
  "builds": [
    { "src": "public/index.php", "use": "vercel-php" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "public/index.php" }
  ],
  "build": {
    "env": {
      "COMPOSER_CACHE_DIR": "/tmp/composer-cache"
    },
    "commands": {
      "prebuild": "composer install --prefer-dist --no-dev --optimize-autoloader"
    }
  }
}